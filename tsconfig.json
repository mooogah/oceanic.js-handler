{
	"compilerOptions": {
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"module": "NodeNext",
		"outDir": "dist",
		"sourceMap": true,
		"declaration": true,
		"lib": [
			"es2022"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}